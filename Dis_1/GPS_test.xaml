<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dis_1.GPS_test"
             Title="GPS_test">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <!-- Метка для отображения координат -->
        <Label x:Name="gpsLabel"
               Text="GPS Coordinates: "
               FontSize="20"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

        <!-- Метка для отображения скорости -->
        <Label x:Name="speedLabel"
               Text="Speed: "
               FontSize="20"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

        <!-- Метка для отображения вспомогательной инфы -->
        <Label x:Name="testLabel"
       Text="Speed: "
       FontSize="20"
       HorizontalOptions="Center"
       VerticalOptions="Center" />

        <Label x:Name="errorLabel"
       Text="Error: "
       FontSize="20"
       HorizontalOptions="Center"
       VerticalOptions="Center" />
        
        
        <!-- Кнопка для старта передачи данных -->
        <Button Text="Начать передачу данных" Clicked="Start_SendingData" Margin="0,10,0,0" />

        <!-- Кнопка для старта передачи данных -->
        <Button Text="Закончить передачу данных" Clicked="Stop_SendingData" Margin="0,20,0,0" />



    </StackLayout>
</ContentPage>