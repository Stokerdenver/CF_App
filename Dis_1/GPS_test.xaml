<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dis_1.GPS_test"
             Title="Поездка">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">

       <Label x:Name="versionLabel"
       Text="Версия: 1.3"
       FontSize="20"
       HorizontalOptions="Center"
       VerticalOptions="Center" />
        
        <Label x:Name=" leaderStatusLabel"
               Text="Статус: "
               FontSize="20"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

        <!-- Метка для отображения координат -->
        <Label x:Name="gpsLabel"
               Text=""
               FontSize="20"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

        <Label x:Name="lonLable"
           Text="Долгота: "
           FontSize="20"
           HorizontalOptions="Center"
           VerticalOptions="Center" />

        <Label x:Name="latLable"
           Text="Широта: "
           FontSize="20"
           HorizontalOptions="Center"
           VerticalOptions="Center" />


        <!-- Метка для отображения скорости -->
        <Label x:Name="speedLabel"
               Text="Скорость: "
               FontSize="20"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        
        <!-- Метка для отображения предсказанной скорости -->
        <Label x:Name="predictedSpeedLabel"
       Text="Модель: "
       FontSize="20"
       HorizontalOptions="Center"
       VerticalOptions="Center" />

        <!-- Метка для отображения вспомогательной инфы -->
        

        <Label x:Name="errorLabel"
       Text=" "
       FontSize="20"
       HorizontalOptions="Center"
       VerticalOptions="Center" />

        <!-- Новый Label для отображения направления движения -->
        <Label 
            x:Name="headingLabel"
            Text=""
            Margin="0,10,0,0"
            HorizontalOptions="Center" />

        <!-- Кнопка для старта передачи данных -->
        <Button Text="Начать передачу данных" Clicked="Start_SendingData" Margin="0,10,0,0"  WidthRequest="240"
        MinimumWidthRequest="200" BackgroundColor="#47309C" />

        <!-- Кнопка для старта передачи данных -->
        <Button Text="Закончить передачу данных" Clicked="Stop_SendingData" Margin="0,20,0,0"  WidthRequest="240"
        MinimumWidthRequest="200" BackgroundColor="#47309C" />

     

    </StackLayout>
</ContentPage>