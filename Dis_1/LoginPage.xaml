<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dis_1.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout Padding="30" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">

        <!-- Ввод имени пользователя -->
        <Label Text="Введите ваше имя"
                   FontSize="Medium"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black"/>
        <Entry x:Name="UsernameEntry" Placeholder="Имя пользователя" />

        <!-- Кнопка подтвердить -->
        <Button Text="Подтвердить"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="20"
                    HorizontalOptions="FillAndExpand"
                    Clicked="OnLoginConfirmClicked"/>
        
        <Button Text="Назад"
            BackgroundColor="#2196F3"
            TextColor="White"
            CornerRadius="20"
            HorizontalOptions="FillAndExpand"
            Clicked="OnBackStepClicked"/>

    </VerticalStackLayout>
</ContentPage>